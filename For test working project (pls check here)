    "#   | |    |  |     | | | |  |     |   |    |   #",
    "#   | Recycle |     | Food   |     | Danger |   #",
    "#^^^###########^^^^^##########^^^^^##########^^^#"
};


int Recycle(int l){

        int a;
        char ch;
        if(GetAsyncKeyState(VK_DOWN))
        {
            int y2= y+1;
            if(map[y2][x]== ' ')
            {
                map[y][x] = ' ';
                y++;
                map[y][x]= '=';
            }

            if(map[y2][x]== '~')
            {
                map[y][x]= ' ';
            }

            if(map[y2][x]== '-')
            {
                try {
                throw a;
                }
                catch(int a){
                cout<<"wrong bin! This is FOOD BIN \n";
                cout<<"You have "<<l<<" life left"<<endl;
                cout<<"Do you want to continue...? (Y/N)"<<endl;
                do
                {
                    cin>>ch;
                if (ch=='Y'||ch=='y'){
                    cout<<"Okay I know, I'll try again"<<endl;
                }
                else if (ch=='N'||ch=='n')
                    {
                    cout<<"I don't want to do this anymore";
                    };
                }while(ch!='y' || ch!='Y' || ch!='n' || ch!='N');
                cin.clear();
                cin.ignore(10);
                 }
            }

            if(map[y2][x]== '.')
            { try {
                throw a;
                }
                catch(int a){
                cout<<"wrong bin! This is DANGER BIN\n";
                cout<<"You have "<<l<<" life left"<<endl;
                cout<<"Do you want to continue...? (Y/N)"<<endl;
                do
                {
                    cin>>ch;
                if (ch=='Y'||ch=='y')
                {
                    cout<<"Okay I know, I'll try again"<<endl;
                }
                else if (ch=='N'||ch=='n')
                    {
                    cout<<"I don't want to do this anymore";
                    };
                }while(ch!='y' || ch!='Y' || ch!='n' || ch!='N');
                }
            }
            if(map[y2][x]== '^')
            { try {
                throw a;
                }
                catch(int a){
                cout<<"The trash is not in the bin!"<<endl;
                cout<<"You have "<<l<<" life left"<<endl;
                cout<<"Do you want to continue...? (Y/N)"<<endl;
                do
                {
                    cin>>ch;
                if (ch=='Y'||ch=='y'){
                    cout<<"Okay I know, I'll try again"<<endl;
                }
                else if (ch=='N'||ch=='n')
                    {
                    cout<<"I don't want to do this anymore";
                    };
                }while(ch!='y' || ch!='Y' || ch!='n' || ch!='N');
            }
        }
    }
        if(GetAsyncKeyState(VK_UP))
        {
            int y2= y-1;
            if(map[y2][x]== ' ')
            {
                map[y][x] = ' ';
                y--;
                map[y][x]= '=';
            }
            if(map[y2][x]== '~')
            {
                map[y][x]= ' ';
            }

        }

        if(GetAsyncKeyState(VK_RIGHT))
        {
            int x2= x+1;
            if(map[y][x2]== ' ')
            {
                map[y][x] = ' ';
                x++;
                map[y][x]= '=';
            }

            if(map[y][x2]== '~')
            {
                map[y][x]= ' ';
            }

        }

        if(GetAsyncKeyState(VK_LEFT))
        {
            int x2= x-1;
            if(map[y][x2]== ' ')
            {
                map[y][x] = ' ';
                x--;
                map[y][x]= '=';


            }

            if(map[y][x2]== '~')
            {
                map[y][x]= ' ';
            }
        }
};

int game_over(int l,int p)
{
    if(l==0)
        {
        cout<<"You've run out of chances!"<<endl;
        }else
            {
                cout<<"You've stop to collect the trash"<<endl;
    cout<<"You've cleaned "<<p<<" Trashes"<<endl;
    cout<<"Thanks for playing!"<<endl;
            }
};

int main()
{
    int point=0, life=3;
    string hello = "Put trash in the right bin\n----How to play----\n- Using arrow keys to move the trash\n- Score will be added every time you put your trash into a right bin\n- If you missed or put your trash in a wrong bin, Your goodness(life) will decrease\n- You have 3 life before game over\n******* Let's go! (^v^)/ *******\n";
    int x=0,a;

    while ( hello[x] != '\0')
    {
        cout << hello[x];
        if ( hello[x]!= ' ' && hello[x]!= '\n')
            Sleep(1);
        x++;
    };
    system("pause");

    while(game_running = true)
    {
        {
            system("cls");
            for (int display = 0; display <29; display++)
                cout<< map[display] <<endl;
                gotoxy(55,1); cout<<"Point  "<<point<<endl;
                gotoxy(55,2); cout<<"Life   "<<life<<endl;
        }
        system("pause>nul");

        Recycle(life);
    }
    game_over(life,point);
    return 0;
}



