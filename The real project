#include <iostream>
#include <windows.h>

using namespace std;

bool game_running = true;

int x=1;
int y=1;


    char map[32][200]= {"#################################################",
                     "#                                               #",
                     "#                                               #",
                     "#                                               #",
                     "#                                               #",
                     "#                                               #",
                     "#                                               #",
                     "#                                               #",
                     "#                                               #",
                     "#                                               #",
                     "#                                               #",
                     "#                                               #",
                     "#                                               #",
                     "#                                               #",
                     "#                                               #",
                     "#                                               #",
                     "#                                               #",
                     "#                                               #",
                     "#                                               #",
                     "#                                               #",
                     "#                                               #",

                     "#                                               #",
                     "#                                               #",
                     "#                                               #",
                     "#   ,-~~~~~~~-,     ,-~~~~~~-,     ,-~~~~~~-,   #",
                     "#   |---------|     |--------|     |--------|   #",
                     "#   | |    |  |     | | | |  |     |   |    |   #",
                     "#   | Recycle |     | Food   |     | Danger |   #",
                     "#################################################"
                    };

int main()
{
    cout<<"Put trash in the right bin"<<endl;
    cout<<endl;
    cout<<"----How to play----"<<endl;
    cout<<"- Using arrow keys to move the trash into the right bin"<<endl;
    cout<<"- Score will be added every time you put your trash into a right bin"<<endl;
    cout<<"- If you missed or put your trash in a wrong bin, Your goodness(life) will decrease"<<endl;
    cout<<"- You have 3 life before game over"<<endl;
    cout<<endl;
    cout<<"******* Let's go! (^v^)/ *******"<<endl;
    cout<<endl;
    system("pause");
    while(game_running = true)
    {
        {
            system("cls");
            for (int display = 0; display <29; display++)
                cout<< map[display] <<endl;
        }
        system("pause>nul");
        if(GetAsyncKeyState(VK_DOWN))
        {
            int y2= y+1;
            if(map[y2][x]== ' ')
            {
                map[y][x] = ' ';
                y++;
                map[y][x]= '=';

            }
        }
        if(GetAsyncKeyState(VK_UP))
        {
            int y2= y-1;
            if(map[y2][x]== ' ')
            {
                map[y][x] = ' ';
                y--;
                map[y][x]= '=';

            }
        }


        if(GetAsyncKeyState(VK_RIGHT))
        {
            int x2= x+1;
            if(map[y][x2]== ' ')
            {
                map[y][x] = ' ';
                x++;
                map[y][x]= '=';

            }
        }

        if(GetAsyncKeyState(VK_LEFT))
        {
            int x2= x-1;
            if(map[y][x2]== ' ')
            {
                map[y][x] = ' ';
                x--;
                map[y][x]= '=';

            }
        }

    }
}


