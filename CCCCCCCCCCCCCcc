int ask(int l, int p){
                char ch;
                int checkend=0;
                gotoxy(55,13);
                cout<<"Do you want to continue...? (Y/N)"<<endl;

                do
                {
                    gotoxy(55,14);cin>>ch;
                }while(ch!='y' && ch!='Y' && ch!='n' && ch!='N');
                if (ch=='Y'||ch=='y')
                {
                    gotoxy(55,16);cout<<"Okay I know, I'll try again"<<endl;
                    return 1;
                    //system("cls");
                }
                else if (ch=='N'||ch=='n')
                    {

                    gotoxy(55,15);
                    gotoxy(55,16);cout<<"I don't want to do this anymore";
                    system("cls");

                    game_over(l,p);

                    };
}

int Recycle(int l, int p)
{
    int checkend=0;
    int a;
    char ch;


    if(GetAsyncKeyState(VK_DOWN))
    {
        int y2= y+1;
        if(map[y2][x]== ' ')
        {
            map[y][x] = ' ';
            y++;
            map[y][x]= 'r';
        }

        if(map[y2][x]== '~')
        {
            p++;
            return p;
        }

        ///////////FOOD BIN///////////////////////////////
       if(map[y2][x]== '-')
            {
                try {
                throw a;
                }
                catch(int a){
                gotoxy(55,9);
                cout<<"wrong bin! This is FOOD BIN \n";
                l=l-1;
                gotoxy(55,11);
                cout<<"You have "<<l<<" life left"<<endl;

                ask(l,p);
                 }
            }
        ////////DANGER BIN/////////////////////////

        if(map[y2][x]== '.')
            { try {
                throw a;
                }
                catch(int a){
                gotoxy(55,9);
                cout<<"wrong bin! This is DANGER BIN\n";
                l=l-1;
                gotoxy(55,11);
                cout<<"You have "<<l<<" life left"<<endl;

                ask(l,p);
                }
            }


        ////////////////////////// Ground/////////////

        if(map[y2][x]== '^')
            { try {
                throw a;
                }
                catch(int a){
                gotoxy(55,9);
                cout<<"The trash is not in the bin!"<<endl;
                l=l-1;
                gotoxy(55,11);
                cout<<"You have "<<l<<" life left"<<endl;
                gotoxy(55,13);
                cout<<"Do you want to continue...? (Y/N)"<<endl;
                do
                {
                    gotoxy(55,14);cin>>ch;
                }while(ch!='y' && ch!='Y' && ch!='n' && ch!='N');
                if (ch=='Y'||ch=='y'){
                    gotoxy(55,16);cout<<"Okay I know, I'll try again"<<endl;
                    tryagain=true;
                    //system("cls");
                }
                else if (ch=='N'||ch=='n')
                    {
                    gotoxy(55,16);cout<<"I don't want to do this anymore";
                    checkend=1;
                    if (checkend==1){

                    game_over(l,p);
                    }
                    };

                cin.clear();
                cin.ignore(10);
            }
        }
        ////////////////////////////////////////////////////////////////

    }
    if(GetAsyncKeyState(VK_UP))
    {
        int y2= y-1;
        if(map[y2][x]== ' ')
        {
            map[y][x] = ' ';
            y--;
            map[y][x]= '=';
        }
        if(map[y2][x]== '~')
        {
            map[y][x]= ' ';
        }

    }

    if(GetAsyncKeyState(VK_RIGHT))
    {
        int x2= x+1;
        if(map[y][x2]== ' ')
        {
            map[y][x] = ' ';
            x++;
            map[y][x]= '=';
        }

        if(map[y][x2]== '~')
        {
            map[y][x]= ' ';
        }

    }

    if(GetAsyncKeyState(VK_LEFT))
    {
        int x2= x-1;
        if(map[y][x2]== ' ')
        {
            map[y][x] = ' ';
            x--;
            map[y][x]= '=';


        }

        if(map[y][x2]== '~')
        {
            map[y][x]= ' ';
        }
    }

};


int Food(int l, int p)
{
