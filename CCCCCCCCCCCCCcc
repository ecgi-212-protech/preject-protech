                {
                    gotoxy(55,14);cin>>ch;
                }while(ch!='y' && ch!='Y' && ch!='n' && ch!='N');
                if (ch=='Y'||ch=='y'){
                    gotoxy(55,16);cout<<"Okay I know, I'll try again"<<endl;
                    tryagain=true;
                    game_running=true;
                    //system("cls");
                }
                else if (ch=='N'||ch=='n')
                    {
                    gotoxy(55,16);cout<<"I don't want to do this anymore";
                    checkend=1;
                    if (checkend==1){

                    game_over(l,p);
                    }
                    };

                cin.clear();
                cin.ignore(10);
                 }
            }
        ////////Food BIN/////////////////////////

        if(map[y2][x]== '-')
        {
                try {
                throw a;
                }
                catch(int a){
                gotoxy(55,9);
                cout<<"wrong bin! This is FOOD BIN \n";
                l=l-1;
                gotoxy(55,11);
                cout<<"You have "<<l<<" life left"<<endl;
                gotoxy(55,13);
                cout<<"Do you want to continue...? (Y/N)"<<endl;
