                {
                    gotoxy(55,14);cin>>ch;
                }while(ch!='y' && ch!='Y' && ch!='n' && ch!='N');
                if (ch=='Y'||ch=='y'){
                    gotoxy(55,16);cout<<"Okay I know, I'll try again"<<endl;
                    tryagain=true;
                    game_running=true;
                    //system("cls");
                }
                else if (ch=='N'||ch=='n')
                    {
                    gotoxy(55,16);cout<<"I don't want to do this anymore";
                    checkend=1;
                    if (checkend==1){

                    game_over(l,p);
                    }
                    };

                cin.clear();
                cin.ignore(10);
                 }
            }

        ////////////////////////// Ground/////////////

        if(map[y2][x]== '^')
        { try {
                throw a;
                }
                catch(int a){
                gotoxy(55,9);
                cout<<"The trash is not in the bin!"<<endl;
                l=l-1;
                gotoxy(55,11);
                cout<<"You have "<<l<<" life left"<<endl;
                gotoxy(55,13);
                cout<<"Do you want to continue...? (Y/N)"<<endl;
                do
                {
                    gotoxy(55,14);cin>>ch;
                }while(ch!='y' && ch!='Y' && ch!='n' && ch!='N');
                if (ch=='Y'||ch=='y'){
                    gotoxy(55,16);cout<<"Okay I know, I'll try again"<<endl;
                    tryagain=true;
                    //system("cls");
                }
                else if (ch=='N'||ch=='n')
                    {
                    gotoxy(55,16);cout<<"I don't want to do this anymore";
                    checkend=1;
                    if (checkend==1){

                    game_over(l,p);
                    }
                    };

                cin.clear();
                cin.ignore(10);
            }
        }
        ////////////////////////////////////////////////////////////////
    }

    if(GetAsyncKeyState(VK_UP))
    {
        int y2= y-1;
        if(map[y2][x]== ' ')
        {
            map[y][x] = ' ';
            y--;
            map[y][x]= '=';
        }
        if(map[y2][x]== '~')
        {
            map[y][x]= ' ';
        }

    }

    if(GetAsyncKeyState(VK_RIGHT))
    {
        int x2= x+1;
        if(map[y][x2]== ' ')
        {
            map[y][x] = ' ';
            x++;
            map[y][x]= '=';
        }

        if(map[y][x2]== '~')
        {
            map[y][x]= ' ';
        }

    }

    if(GetAsyncKeyState(VK_LEFT))
    {
        int x2= x-1;
        if(map[y][x2]== ' ')
        {
            map[y][x] = ' ';
            x--;
            map[y][x]= '=';


        }

        if(map[y][x2]== '~')
        {
            map[y][x]= ' ';
        }
    }
};



int main()
{
    int Life=3,point=0;
    string hello = "Put trash in the right bin\n----How to play----\n- Using arrow keys to move the trash\n- Score will be added every time you put your trash into a right bin\n- If you missed or put your trash in a wrong bin, Your goodness(life) will decrease\n- You have 3 life before game over\n******* Let's go! (^v^)/ *******\n";
    int x=0,a,b,c,v;

    int o;
    srand (time(NULL));
    o = 2;
    Game obj;
    obj.ranshow(o);

    while ( hello[x] != '\0')
    {
        cout << hello[x];
        if ( hello[x]!= ' ' && hello[x]!= '\n')
            Sleep(1);
        x++;
    };
    system("pause");

    while(game_running = true)
    {
        {
            system("cls");
            for (int display = 0; display <29; display++)
                cout<< map[display] <<endl;
            gotoxy(55,1);
            cout<<"Point  "<<point<<endl;
            gotoxy(55,2);
            cout<<"Life   "<<Life<<endl;
            obj.ranshow(o);
        }
        system("pause>nul");

    if(o>=1&&o<4){Recycle(Life, point);};
    if(o>=4&&o<=7){Food(Life, point);};
    if(o>7&&o<=10){Danger(Life, point);};
    gotoxy(55, 10);
    cout<<"bitch";

    } return 0;
}
