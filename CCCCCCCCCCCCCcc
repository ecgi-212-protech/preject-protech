int Danger(int l, int p)
{
    int checkend=0;
    int a;
    char ch;
    if(GetAsyncKeyState(VK_DOWN))
    {
        int y2= y+1;
        if(map[y2][x]== ' ')
        {
            map[y][x] = ' ';
            y++;
            map[y][x]= 'd';
        }

        if(map[y2][x]== '.')
        {
            map[y][x]= ' ';
            p++;
            return p;
        }

        ///////////RECYCLE BIN///////////////////////////////
        if(map[y2][x]== '~')
        {
                try {
                throw a;
                }
                catch(int a){
                gotoxy(55,9);
                cout<<"wrong bin! This is RECYCLE BIN \n";
                l=l-1;
                gotoxy(55,11);
                cout<<"You have "<<l<<" life left"<<endl;
